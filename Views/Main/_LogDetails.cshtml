@model List<LoggingItem>
@using DigitalTVBilling.Helpers
<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">დეტალური ნახვა</h4>
            </div>
            <div class="modal-body" style="max-height: 400px; overflow-y:scroll;">
                <div class="row">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 50%;">აღწერა
                                </th>
                                <th style="width: 25%;">ახალი მნიშ.
                                </th>
                                <th style="width: 25%;">ძველი მნიშ.
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (LoggingItem item in Model)
                            {
                                <tr>
                                    <td>@item.ColumnDisplay</td>
                                    <td>@item.NewValue</td>
                                    <td>@item.OldValue</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-xs" data-dismiss="modal">დახურვა</button>
            </div>
        </div>
    </div>
</div>
