@model List<Service>
<div class="modal fade" id="subscr_list_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">მომსახურებები</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="width:5%;">
                                
                            </th>
                            <th style="width:60%;">
                                დასახელება
                            </th>
                            <th style="width:15%;">
                                თანხა
                            </th>
                            <th style="width:20%;">
                                გადახდის ტიპი
                            </th>
                        </tr>
                    </thead>
                    <tbody id="services_body">
                        @foreach (Service service in Model)
                        {
                            <tr data-id="@service.Id">
                                <td><input type="checkbox" /></td>
                                <td>@service.Name</td>
                                <td>
                                    <input type="text" value="@service.Amount" class="form-control input-sm" @if(service.IsEdit) { @Html.Raw("")} else {@Html.Raw("readonly")}/>
                                </td>
                                <td>
                                    @Html.DropDownList("PayType", (List<SelectListItem>)ViewBag.PayTypes, new { @class="form-control input-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-xs" data-dismiss="modal">დახურვა</button>
                <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" id="services_add">დამატება</button>
            </div>
        </div>
    </div>
</div>



