@model List<AutoMessageTemplate>
@using DigitalTVBilling.Helpers
<div class="modal fade" id="template_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">ავტომატური შეტყობინებები</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="width: 10%;">
                                ტიპი
                            </th>
                            <td width="10%">
                                დასახელება
                            </td>
                            <th style="width: 60%;">
                                შეტყობინება
                            </th>
                            <th style="width: 5%;">
                                აბ. რაოდ.
                            </th>
                            <th style="width: 10%;">
                               ტიპი
                            </th>
                            <th style="width: 5%;">
                            </th>
                        </tr>
                    </thead>
                    <tbody id="messages_body">
                        @foreach (AutoMessageTemplate mess in Model)
                        {
                            <tr>
                                <td>@mess.MessageType</td>
                                <td>@mess.Name</td>
                                <td>@mess.MessageText</td>
                                <td>
                                    @Html.GetAutoTemplateUsers(mess.Query)
                                </td>
                                <td>
                                    @if(mess.IsDisposable) { @Html.Raw("ერთჯერადი") } else { @Html.Raw("") }
                                </td>
                                <td>
                                    <button type="button" class="close" data-id="@mess.Id">&times;</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-xs" data-dismiss="modal">დახურვა</button>
            </div>
        </div>
    </div>
</div>

