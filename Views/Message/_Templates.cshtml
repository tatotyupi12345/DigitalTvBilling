@model List<MessageTemplate>
<div class="modal fade" id="subscr_list_modal" style="overflow-y:auto">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">შაბლონები</h4>
            </div>
            <div class="modal-body">
                <button type="button" class="btn btn-default btn-xs" style="margin-bottom:5px;" onclick="onAddTemplate(0)">
                    <span class="glyphicon glyphicon-plus"></span> დამატება
                </button>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="width:90%;">
                                დასახელება
                            </th>
                            <th style="width:10%;">

                            </th>
                        </tr>
                    </thead>
                    <tbody id="templates_body">
                        @foreach (MessageTemplate user in Model)
                        {
                            <tr data-id="@user.Id">
                                <td onclick="onAddTemplate(@user.Id)">@user.Name</td>
                                <td style="text-align:center;"><span class="glyphicon glyphicon-remove" onclick="onDeleteTemplate(@user.Id)"></span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-xs" data-dismiss="modal">დახურვა</button>
            </div>
        </div>
    </div>
</div>

