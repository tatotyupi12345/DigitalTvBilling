<div class="modal fade" id="office_card_modal">
    <div class="modal-dialog">
        @using (Ajax.BeginForm("", null, new AjaxOptions
                                         {
                                             Url = Url.Action("NewAutoSubscrib"),
                                             OnSuccess = "onSuccessNewAutoSubscrib",
                                             HttpMethod = "POST"
                                         }, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">ახალი ოფისის ბარათი</h4>
                </div>
                <div class="modal-body">
                    <div class="row" id="cards_find_area">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-2">ძებნა:</label>
                                <div class="col-md-4">
                                    <select class="form-control input-sm" id="find_by">
                                        <option value="1">პირადი ნომრით</option>
                                        <option value="0">ხელშ. ნომრით</option>
                                        <option value="2">აბონენტის ნომრით</option>
                                    </select>
                                </div>
                                <div class="col-md-5">
                                    <div class="input-group input-group-sm">
                                        <input type="text" class="form-control" id="payment_find" autocomplete="off">
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-default" id="find">
                                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:5px; margin-top:1px;">
                        <div class="col-md-3 col-md-offset-2">
                            <span id="add_subscription" style="cursor: pointer;">
                                <span class="glyphicon glyphicon-shopping-cart"></span>
                                <span>ახალი პაკეტი</span>
                            </span>
                        </div>
                        <div class="col-md-4" id="subscribs_names">

                        </div>
                    </div>
                    <div class="row" style="margin-bottom:5px; margin-top:1px;">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-2">შეცვლის თარიღი:</label>
                                <div class="col-md-1">
                                    <input type="checkbox" class="form-control input-sm" id="is_change_date" />
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group input-group-sm date" id="txt_date">
                                        <input type="text" name="SendDate" id="SendDate" class="form-control input-sm" disabled />
                                        <a class="input-group-addon" style="cursor: pointer;">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-7 col-md-offset-3">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <div id="subscribs">
                                            </div>
                                            <div id="cards">
                                            </div>
                                            <div id="abonent_area">
                                            </div>
                                            <span style="color: red;" id="card_message"></span>
                                            <div class="btn-group-vertical" role="group" id="cards_area" style="padding-left:15px;">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-xs" data-dismiss="modal">დახურვა</button>
                    <input type="submit" class="btn btn-primary btn-xs" value="შენახვა" />
                </div>
            </div>
        }
    </div>
</div>
